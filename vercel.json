{
    "version": 2,
    "installCommand": "npm install && cd api && npm install && cd ../client && npm install",
    "buildCommand": "cd client && npm run build",
    "outputDirectory": "client/dist",
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    }
}